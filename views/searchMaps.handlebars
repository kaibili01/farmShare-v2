<div class="container py-4">
  <div class="row mb-3">
    <div class="col text-center">
      <h1 class="headerText">Farm Share!</h1>
      <h3 class="subHeader">Who's giving fruit away?</h3>
    </div>
  </div>

  <form id="route-form" class="mb-4">
    <div id="floating-panel" class="mb-3">
      <label for="start" class="sr-only">Starting Address</label>
      <strong>Start:</strong>
      <input id="start" class="controls form-control mb-2" type="text" placeholder="Your Address" aria-describedby="start-help">
      <small id="start-help" class="form-text text-muted">Enter your starting address.</small>

      <label for="end" class="sr-only">Destination Address</label>
      <strong>End:</strong>
      <select id="end" class="form-control">
        {{#each posts}}
          <option value="{{this.address}}, {{this.city}}, {{this.state}}">
            {{this.address}}, {{this.city}}, {{this.state}}
          </option>
        {{/each}}
      </select>
    </div>
  </form>

  <label for="pac-input" class="sr-only">Search Box</label>
  <input id="pac-input" class="controls form-control mb-3" type="text" placeholder="Search Box" aria-label="Search location">

  <div id="map" style="height: 400px;"></div>
  <div id="right-panel" class="mt-3"></div>

  <div class="row justify-content-center mt-4">
    <div class="col-4 text-center">
      <a href="/feed" class="btn btn-success btn-block" role="button" aria-label="Back to Available Posts">
        Back to Available Posts
      </a>
    </div>
  </div>
</div>

<footer>
  <div class="row footer mt-5">
    <div class="col text-center">
      <p>&copy; 2019 farmShare</p>
    </div>
  </div>
</footer>

